<div class="slide-transition">


    {% if post.poster is not null %}
        {% set username = post.poster.username %}
    {% else %}
        {% set username = 'discutea.forum.deleted.user'|trans %}
    {% endif %}


    <div class="forum-post">
        <a href="/profil/102229"><img class="forum-post_avatar"
                                      src="http://image.eveonline.com/Character/{{ post.poster.charId }}_32.jpg" alt="Default"></a>


        <div class="forum-post_body">
            <a class="forum-post_author" href="/profil/102229">{{ username }}</a>, <a class="forum-post_date"
                                                                              href="#p29544"><abbr
                        class="timeago">{{ 'discutea.forum.on'|trans }} {{ post.date|date("Y-m-d H:i:s") }}</abbr></a><span class="forum-post_actions"> </span>
            <div class="forum-post_text">
                <div>
                    <div>
                        <div class="forum-post_content" id="content-{{ post.id }}">
                            <div>
                                <p>
                                    {{ post.content }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
