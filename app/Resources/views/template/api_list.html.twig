<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <td>Portrait</td>
            <td>Nom du perso</td>

            {% if is_granted('ROLE_MEMBER') %}
                <td>Asset</td>
            {% endif %}

            {% if is_granted('ROLE_MEMBER') %}
                <td>Mails</td>
            {% endif %}

            {% if is_granted('ROLE_MEMBER') %}
                <td>Skills</td>
            {% endif %}

            <td>Toujour valable?</td>
            <td>Action</td>
        </tr>


        {% for api in apis %}
            <tr>
                <td> <img src="{{ api.portrait }}"> </td>

                <td> <a href="{{ path('myapi', { 'id' : api.id } ) }} ">{{ api.charName }} </a> </td>

                {% if is_granted('ROLE_MEMBER') %}
                    <td> <a href="{{ path('asset-list', { 'id' : api.id } ) }} ">Voir les assets </a> </td>
                {% endif %}

                {% if is_granted('ROLE_MEMBER') %}
                    <td><a href="{{ path('emailsNoLabel', { 'id' : api.id } ) }}">Voir les mails</a></td>
                {% endif %}

                {% if is_granted('ROLE_MEMBER') %}
                    <td><a href="{{ path('api-skills', { 'id' : api.id } ) }}">Voir les skills</a></td>
                {% endif %}
                <td>  {% if api.isValid %} oui {% else %} non {% endif %}  </td>

                <td> <a href="{{ path('removeapi', { 'id' : api.id } ) }} "> Supprimer </a> </td>


            </tr>


        {% else %}
            Pas d'API
        {% endfor %}

    </table>
</div>