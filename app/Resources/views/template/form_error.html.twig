{% form_theme form _self %}
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% if compound %}
                {% for error in errors %}
                    <div class="alert alert-danger">
                        <strong> Erreur! </strong> {{ error.message }}
                    </div>
                {% endfor %}

            {% endif %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}