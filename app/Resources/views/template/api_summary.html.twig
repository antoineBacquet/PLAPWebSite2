
<h1> Details de l'api de {{ api_summary.api.charName }}</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Summary</h3>
    </div>

    <div class="panel-body">

        <div class="box-body box-profile">

            <img src="{{ api_summary.portrait }}" class="profile-user-img img-responsive img-circle img-lazy-load"  />
            <h3 class="profile-username text-center">
                {{ api_summary.api.charName }}
            </h3>

            <p class="text-muted text-center">
                {{ api_summary.corp }}
            </p>


            <hr>

            <dl>

                <dt>A rejoint</dt>
                <dd>Il y a {{ api_summary.joined }} jours</dd>

                <dt>Skillpoints</dt>
                <dd>{{ api_summary.skillpoints|number_format(0, '.', ' ') }}</dd>

                <dt>Wallet</dt>
                <dd>{{ api_summary.wallet|number_format(0, '.', ',') }} isk</dd>

                <dt>Ship actuel</dt>
                <dd>{{ api_summary.current_ship.type }} <i>{{ api_summary.current_ship.name }}</i></dd>

                <dt>Derni√©re location</dt>
                <dd>
                    {% if api_summary.location.type == 'station' %}
                        Station {{ api_summary.location.name }}
                    {% elseif api_summary.location.type == 'citadel' %}
                        Citadel {{ api_summary.location.name }}
                    {% else %}
                        Dans l'espace
                    {% endif %}
                </dd>

                <dt>Security Status</dt>
                <dd>

                    {% if api_summary.security_status < 0 %}
                        <span class="text-failed">
                            {{ api_summary.security_status|number_format(1, '.', ',') }}
                        </span>
                    {% else %}
                        <span class="text-success">
                            {{ api_summary.security_status|number_format(1, '.', ',') }}
                        </span>
                    {% endif %}

                </dd>


            </dl>
        </div>
    </div>
</div>