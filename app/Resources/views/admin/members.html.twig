

{% extends 'template/base.html.twig' %}




{% block body %}
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td> Nom </td>
                    <td> Groupe </td>
                    <td> Discord li√©? </td>
                    <td> Corporation </td>
                    <td> Nombre de personnage </td>
                </tr>
            </thead>

            <tbody>
                {% for member in members %}
                    <tr>
                        <td><a href="{{ path('member', { 'id' : member.getId() } ) }}"> {{ member.getName()}} </a>  </td>

                        <td>  {{ member.roles|last }}</td>

                        <td> {% if member.discordId == null %} Non {% else %} Oui {% endif %} </td>

                        <td>{% if member.corp is null %} Corporation inconue (erreur ESI) {% else %}{{ member.corp.name}} {% endif %}  </td>

                        <td>{% if member.apis is null %} 0 {% else %} {{ member.apis.count }} {% endif %}</td>

                    </tr>
                {% else %}
                    Pas de membres.
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}