        <br>
        {% if api.lastAssetUpdate is null or api.lastAssetUpdate|date_modify('+1 hour') < date() %}
            <a href="{{ path('update-asset', { 'id' : api.id }) }}">Update</a></td>
        {% else %}
             Update indisponible
        {% endif %}</h5>

    <input type="text" placeholder="Search.." onkeydown="search(this)" style="color: black">
    <button type="button" class="btn btn-light" style="color: black" onclick="cancel()">Annuler</button>

    <div id="tree" style="text-align: left"></div>



{% endblock %}


{% block js %}


    <script src="{{ asset('js/dist/jstree.min.js') }}"></script>
    <script type="text/javascript">
        $('#tree').jstree({
            'core' : {
                'data' : {
                    'url' : function (node) {
                        return node.id === '#' ?
                            '/asset/getroot' :
                            '/asset/getchildren'
                    },
                    'data' : function (node) {
                        return { 'id' : node.id ,'api_id' : {{ api.id }} };
                    }
                },
                "themes" : {
                    "variant" : "large"
                }

            }});


        function search(e) {
            if(event.key === 'Enter' && e.value.length > 3) {

                $.ajax({
                    url: '{{ (path('asset-search')) }}',
                    type: "POST",
                    dataType: "json",
                    data: {
                        text : e.value,
                        api_id: {{ api.id }}
                    },
                    //async: true,
                    success: function (data) {
                        //alert(JSON.stringify(data));

                        var tree = $('#tree');
                        tree.jstree().settings.core.data = data;
                        tree.jstree().refresh();
                    },
                    fail : function(data){
                        alert('error');
                    }
                });
            }
        }

        function cancel(e) {
            var tree = $('#tree');
            tree.jstree().settings.core.data = {
                'url' : function (node) {
                    return node.id === '#' ?
                        '/asset/getroot' :
                        '/asset/getchildren'
                },
                'data' : function (node) {
                    return { 'id' : node.id ,'api_id' : {{ api.id}} };
                }
            };
            tree.jstree().refresh();
        }
    </script>

{% endblock %}