{% extends 'template/base.html.twig' %}


{% block body %}

    <h1> Skills </h1>


    {% set i=0 %}
    {% for group in groups %}

        {% if i%2 == 0 %}
            <div class="row">
        {% endif %}

            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse{{ group['group'].id }}"> {{ group['group'].name }}</a>
                        </h4>
                    </div>
                    <div id="collapse{{ group['group'].id }}" class="panel-collapse collapse">
                        <div class="panel-body" style="color: black">
                            {% for skill in group['skills'] %}
                            <div class="row">
                                <div class="col-md-8">
                                    {{ skill.name }}
                                </div>
                                <div class="col-md-4">

                                    {% for j in 1..5 %}
                                        {% if j <= skill.level  %}
                                            <img src="{{ asset('images/skill_level_nok.bmp') }}" width="8" height="8">
                                        {% else %}
                                            <img src="{{ asset('images/skill_level_ok.bmp') }}" width="8" height="8">
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>

                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

        {% if i%2 == 1 %}
            </div>
        {% endif %}

        {% set i=i+1 %}

    {% endfor %}

{% endblock %}